<%= form_with model: @portfolio do |uploadphoto| %>
    <div>
      <%= uploadphoto.label :name %>
      <%= uploadphoto.text_field :name %>
    </div>
    <div> 
        <%= uploadphoto.label :description, style: "display: block" %>
        <%= uploadphoto.rich_text_area :description %>
    </div>

    <div>
        <%= uploadphoto.label :images, style: "display: block" %>
        <%= uploadphoto.file_field :images, multiple: true, accept: "image/*" %>
    </div>
    <!-- <div>
      <%= uploadphoto.submit %>
    </div> -->
    <div>
      <%= uploadphoto.submit "Save", class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700" %>
    </div>
<% end %>