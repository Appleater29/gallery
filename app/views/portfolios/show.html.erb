<% cache @portfolio do %>

    <h1><%= @portfolio.name %></h1>
    <%= @portfolio.description %>
    <% end %>

    <% if @portfolio.images.attached? %>
        <div style="display: flex; flex-wrap: wrap; gap: 10px;">
        <% @portfolio.images.each do |image| %>
            <%= link_to image_tag(@portfolio.image_as_thumbnail(image)), image %>
        <% end %>
        </div>
    <% end %>

<%= link_to portfolios_path, class: "nav-link" do %>
    <%= image_tag "svg/back.svg", class: "nav-icon-med" %>
<% end %>
<% if authenticated? %>
<%= link_to "Edit", edit_portfolio_path(@portfolio) %>
<%= button_to "Delete", @portfolio, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
<% end %>